<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/Configurações"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="8dp"
        tools:text="Configurações"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/carnevale"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp"
        app:layout_constraintTop_toBottomOf="@id/Configurações"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuário"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="49dp"
        tools:text="Usuário"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="49dp"
        tools:text="E-mail"
        app:layout_constraintTop_toBottomOf="@id/Usuario"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"
        android:text="Configurações da Conta"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="176dp"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/Formas_de_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formas de Pagamento"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="252dp"
        app:layout_constraintTop_toBottomOf="@id/Conta"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/Assinaturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assinaturas"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="337dp"
        app:layout_constraintTop_toBottomOf="@id/Formas_de_pagamento"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/Notificações"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificações"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="432dp"
        app:layout_constraintTop_toBottomOf="@id/Assinaturas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/Sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="479dp"
        app:layout_constraintTop_toBottomOf="@id/Notificações"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/Retornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar à Tela Principal"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="479dp"
        app:layout_constraintTop_toBottomOf="@id/Sobre"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>